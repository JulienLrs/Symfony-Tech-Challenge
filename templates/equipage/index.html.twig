{% extends 'base.html.twig' %}

{% block title %}Bienvenue à bord Matelot{% endblock %}

{% block body %}
{# include de base.html.twig #}
{{ form_start(form) }}
<div class="d-flex justify-content-center">{{ form_row(form.name) }}</div>
{# <div class="d-flex justify-content-center">{{ form_row(form.description) }}</div> #}
    <div class="text-center">
        <button type="submit" class="btn btn-dark my-5" style="font-family: 'Roboto', sans-serif;">
            Envoyer
        </button>
    </div>
{{ form_end(form) }}


<!-- Member list -->
<h2>
Membres de l'équipage: {{ equipages | length }}
</h2>
<div class="row">
    {% for equipage in equipages %}
    <div class="col-12 col-md-4 col-lg-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center" style="color: #f76c6c">{{ equipage.name }}</h5>

        </div>
    </div>
</div>
    {% endfor %}
</div>
{% endblock %}
